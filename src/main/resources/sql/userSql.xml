<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>

    <entry key="select.users">
        <![CDATA[
            SELECT * FROM aviodb.user;
        ]]>
    </entry>
    <entry key="select.user.by.id">
        <![CDATA[
            SELECT * FROM aviodb.user u WHERE u.id = ?
        ]]>
    </entry>
    <entry key="select.user.by.username">
        <![CDATA[
            SELECT * FROM aviodb.user u WHERE u.username = ?
        ]]>
    </entry>

    <entry key="insert.user">
        <![CDATA[
            INSERT INTO aviodb.user (username, password, role_id) VALUES (?,?,?)
        ]]>
    </entry>
</properties>