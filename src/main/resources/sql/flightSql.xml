<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>

    <entry key="select.flights">
        <![CDATA[
            SELECT * FROM aviodb.flight;
        ]]>
    </entry>

    <entry key="select.flight.by.id">
        <![CDATA[
            SELECT * FROM aviodb.flight f WHERE f.id = ?
        ]]>
    </entry>

    <entry key="delete.flight">
        <![CDATA[
            DELETE FROM aviodb.flight
            WHERE id = ?
        ]]>
    </entry>

    <entry key="insert.flight">
        <![CDATA[
            INSERT INTO aviodb.flight
            (
                pilot_id,
                aeroplane_id,
                airport_dep_iata,
                airport_arr_iata,
                gate,
                duration,
                time_dep,
                time_arr,
                free_seats,
                price_bu,
                price_ec,
                date_created,
                date_updated
            )
            VALUES(
                ?,
                ?,
                ?,
                ?,
                ?,
                ?,
                ?,
                ?,
                ?,
                ?,
                ?,
                SYSDATE(),
                SYSDATE()
            )
        ]]>
    </entry>
    <entry key="update.flight">
        <![CDATA[
            UPDATE aviodb.flight SET
                pilot_id = ?,
                aeroplane_id = ?,
                airport_dep_iata = ?,
                airport_arr_iata = ?,
                gate = ?,
                duration = ?,
                time_dep = ?,
                time_arr = ?,
                free_seats = ?,
                price_bu = ?,
                price_ec = ?,
                date_updated = SYSDATE()
            WHERE id = ?
        ]]>
    </entry>

    <entry key="unlock.flight">
        <![CDATA[
            UPDATE aviodb.flight SET
                lock_id = null
            WHERE id = ?
        ]]>
    </entry>

    <entry key="lock.flight">
        <![CDATA[
            UPDATE aviodb.flight SET
                lock_id = ?
            WHERE id = ?
        ]]>
    </entry>

    <entry key="check.whether.flight.is.locked">
        <![CDATA[
            SELECT lock_id FROM aviodb.flight f WHERE f.id = ?
        ]]>
    </entry>

</properties>